<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/help_me_list_item_image"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/help_me_list_item_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/help_me_list_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/colorPrimaryLight"
            app:layout_constraintBottom_toBottomOf="@id/help_me_list_item_image"
            app:layout_constraintStart_toStartOf="@id/help_me_list_item_image"
            tools:text="Category" />

        <TextView
            android:id="@+id/help_me_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_me_list_item_image"
            tools:text="Title" />

        <LinearLayout
            android:id="@+id/help_me_list_item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_me_list_item_title">

            <TextView
                android:id="@+id/help_me_list_item_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_round_location_on_24"
                android:drawablePadding="8dp"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="Blk 999" />

            <TextView
                android:id="@+id/help_me_list_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_round_calendar_today_24"
                android:drawablePadding="8dp"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="Tomorrow" />

            <TextView
                android:id="@+id/help_me_list_item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_round_access_time_24"
                android:drawablePadding="8dp"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="12 pm" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="?attr/borderlessButtonStyle"
            android:id="@+id/help_me_list_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/help_me_list_item_details_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_me_list_item_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>